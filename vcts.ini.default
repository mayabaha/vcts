# VCTS : Virtual Coin Transaction System initialize file

# global parameters
[global]
# exchange name
# 'coincheck' or 'bitflyer'
exchange = bitflyer

# product code
# coincheck : 'BTC_JPY' 
# bitflyer  : 'BTC_JPY', 'ETH_BTC', 'FX_BTC_JPY'
product = BTC_JPY

# API Key
apikey = inputhere
apisecret = inputhere

# timeout value getting from queue
q_get_tov = 10

#---------------------------------------------------
# Polling module parameters
[polling]
# polling interval (unit=second)
interval = 1

# polling count (negative value indidates infinite loop)
count = -1

#---------------------------------------------------
# scalping module parameters
[scalping]
# scalping interval (unit=second)
interval = 1

# scalping amount of size
size = 0.001

# expiration date
expiration_date = 10000

#---------------------------------------------------
# sell module parameters
[sell]
# polling interval (unit=second)
interval = 1

# amount of sell size
size = 0.001

# profit border [%]
profit_border = 1.01

# cut border [%]
cut_border = 0.995
